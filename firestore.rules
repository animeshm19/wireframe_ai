rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- DEBUG RULES START ---
    // CAUTION: This allows ANYONE to read ANY job.
    // Use this only to confirm your app works, then revert immediately.
    
    match /designJobs/{jobId} {
      allow read: if true;
      allow write: if false; // Only server (Cloud Function) should write
    }
    
    // --- DEBUG RULES END ---

    match /{document=**} {
      allow read, write: if false;
    }
  }
}