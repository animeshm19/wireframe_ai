{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    // alias support
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // vite types
    "types": ["vite/client"]
  },
  "include": ["src", "vite.config.ts"]
}
